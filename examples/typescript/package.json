{
  "name": "@wakeword/client",
  "version": "1.0.0",
  "description": "Browser-based wake word detection client for the WakeWord server",
  "main": "dist/wakeword-client.js",
  "module": "dist/wakeword-client.mjs",
  "types": "dist/wakeword-client.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/wakeword-client.mjs",
      "require": "./dist/wakeword-client.js",
      "types": "./dist/wakeword-client.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup src/wakeword-client.ts --format cjs,esm --dts",
    "dev": "vite",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts"
  },
  "keywords": [
    "wakeword",
    "wake-word",
    "voice",
    "speech",
    "detection",
    "hotword",
    "keyword-spotting",
    "audio",
    "browser",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Josh-XT/wakeword"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  }
}
