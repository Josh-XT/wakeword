# Server configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Model storage
MODELS_DIR=./models
SAMPLES_DIR=./samples
CACHE_DIR=./cache

# Training configuration
DEFAULT_SAMPLE_COUNT=500
DEFAULT_EPOCHS=50
DEFAULT_BATCH_SIZE=32

# TTS configuration - enable/disable specific engines
TTS_GTTS_ENABLED=true
TTS_EDGE_ENABLED=true
TTS_PYTTSX3_ENABLED=true
TTS_CHATTERBOX_ENABLED=false  # Requires GPU, set to true if available

# Chatterbox TTS (optional, for high-quality voice cloning)
CHATTERBOX_VOICES_DIR=./voices

# Redis for background tasks (optional, uses in-memory if not configured)
REDIS_URL=redis://localhost:6379/0

# GPU configuration
CUDA_VISIBLE_DEVICES=0
FORCE_CPU=false
